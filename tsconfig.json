{
  "files": [],
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@pages": ["./src/pages"],
      "*": ["node_modules/*"],
      "@icons/*": ["./src/ui/Icon/*"]
    },
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}